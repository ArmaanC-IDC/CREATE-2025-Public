/* Table of Contents*/
a:link {
    color: #41518c;
} 

a:visited {
    color: #372f69;
}
a:hover {
    color: #0b1847;
}
a:active {
    color: rgb(120, 140, 186);
}

/* Fonts and Text Setting*/
h1 {
    font-family: "Sofia";
